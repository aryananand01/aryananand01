package com.company.recursion;
import java.util.Scanner;
public class febina {
    // n Fibonacci series
    public static void calculateFebinaci(int a,int b,int c) {
        int n=a+b;
       // System.out.println(n);
        if (c==1){
            System.out.println(n);
            return;
        }
        calculateFebinaci(b,n,c-1);


    }

    public static void main(String[] args) {
        int a=0;
        int b=1;
        Scanner sc=new Scanner(System.in);
        int c=sc.nextInt();
       // System.out.println(a);
       // System.out.println(b);
        calculateFebinaci(a,b,c-2);
    }
}
